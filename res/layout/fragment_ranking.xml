<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_ranking_fundo"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="176dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$" />

        <TextView
            android:id="@+id/parlamentarRankinglistfragment_txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_alignBottom="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_toRightOf="@+id/parlamentarRankinglistfragment_txt_partido"
            android:text="-" />

        <TextView
            android:id="@+id/parlamentarRankinglistfragment_txt_uf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="UF" />

        <TextView
            android:id="@+id/parlamentarlistfragment_txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome" />

        <TextView
            android:id="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parlamentarlistfragment_txt_nome"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:text="Partido" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.39" >

        <ImageView
            android:id="@+id/moedinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/lugar"
            android:src="@drawable/ranking_maiores_icone" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parlamentarlistfragment_txt_posicao"
            android:layout_alignBottom="@+id/parlamentarlistfragment_txt_posicao"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="ยบ"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/parlamentarlistfragment_txt_posicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/moedinha"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_marginTop="5dp"
            android:text="167"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="Lugar"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lugar"
            android:layout_alignTop="@+id/parlamentarlistfragment_txt_posicao"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/moedinha"
            android:src="@drawable/linha_divisora" />

    </RelativeLayout>

</LinearLayout>