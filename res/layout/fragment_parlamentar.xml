<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:background="@drawable/fragmentparlamentar_fundo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/parlamentarlistfragment_img_arte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:contentDescription="TODO"
            android:src="@drawable/fragmentparlamentar_art" />

        <TextView
            android:id="@+id/parlamentarlistfragment_txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/parlamentarlistfragment_img_arte"
            android:text="TextView" />
        
        </RelativeLayout>

</LinearLayout>
