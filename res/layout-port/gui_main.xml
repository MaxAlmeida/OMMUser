<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false" >

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="0.76"
            android:orientation="vertical" >
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_ic_rolagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-70dp"
        android:layout_marginRight="-70dp"
        android:background="@drawable/btn_rolagem" />

    <ImageView
        android:id="@+id/icon_esconder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/icon_esconder" />

    <Button
        android:id="@+id/btn_sobre_main"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/btn_ic_rolagem"
        android:background="@drawable/sobre" />

    <Button
        android:id="@+id/btn_politico_main"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_ic_rolagem"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/parlamentar" />

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btn_ic_rolagem"
        android:layout_toLeftOf="@+id/btn_ic_rolagem"
        android:background="@drawable/ranking" />

    <Button
        android:id="@+id/btn_pesquisar_parlamentar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btn_ic_rolagem"
        android:layout_alignLeft="@+id/btn_ic_rolagem"
        android:background="@drawable/pesquisa" />

</RelativeLayout>